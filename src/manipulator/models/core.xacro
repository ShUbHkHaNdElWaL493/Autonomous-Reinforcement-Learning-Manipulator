<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="materials.xacro"/>
  <xacro:include filename="cylinder.xacro"/>
  <xacro:include filename="sphere.xacro"/>

  <link name="base_link"/>

  <xacro:CYLINDER
  link_name="link_0"
  link_material="blue"
  link_density="7850"
  link_length="0.1"
  link_radius="0.2"
  />

  <xacro:CYLINDER
  link_name="link_1"
  link_material="red"
  link_density="2700"
  link_length="0.4"
  link_radius="0.04"
  />

  <xacro:SPHERE
  link_name="link_2"
  link_material="green"
  link_density="1050"
  link_radius="0.05"
  link_centre="0.43"
  />

  <xacro:CYLINDER
  link_name="link_3"
  link_material="red"
  link_density="2700"
  link_length="0.3"
  link_radius="0.04"
  />

  <xacro:SPHERE
  link_name="link_4"
  link_material="green"
  link_density="1050"
  link_radius="0.05"
  link_centre="0.33"
  />

  <xacro:CYLINDER
  link_name="link_5"
  link_material="red"
  link_density="2700"
  link_length="0.3"
  link_radius="0.04"
  />

  <xacro:SPHERE
  link_name="link_6"
  link_material="green"
  link_density="1050"
  link_radius="0.05"
  link_centre="0.33"
  />

  <xacro:CYLINDER
  link_name="link_7"
  link_material="red"
  link_density="2700"
  link_length="0.2"
  link_radius="0.04"
  />

  <xacro:SPHERE
  link_name="link_8"
  link_material="yellow"
  link_density="1050"
  link_radius="0.05"
  link_centre="0.23"
  />

  <joint name="joint_base" type="fixed">
    <parent link="base_link"/>
    <child link="link_0"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <joint name="joint_01" type="continuous">
    <parent link="link_0"/>
    <child link="link_1"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="joint_12" type="fixed">
    <parent link="link_1"/>
    <child link="link_2"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <joint name="joint_23" type="revolute">
    <parent link="link_2"/>
    <child link="link_3"/>
    <origin xyz="0 0 0.43" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="1.571" effort="10" velocity="1.0"/>
  </joint>

  <joint name="joint_34" type="fixed">
    <parent link="link_3"/>
    <child link="link_4"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <joint name="joint_45" type="revolute">
    <parent link="link_4"/>
    <child link="link_5"/>
    <origin xyz="0 0 0.33" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="1.571" effort="10" velocity="1.0"/>
  </joint>

  <joint name="joint_56" type="fixed">
    <parent link="link_5"/>
    <child link="link_6"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <joint name="joint_67" type="revolute">
    <parent link="link_6"/>
    <child link="link_7"/>
    <origin xyz="0 0 0.33" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="1.571" effort="10" velocity="1.0"/>
  </joint>

  <joint name="joint_78" type="fixed">
    <parent link="link_7"/>
    <child link="link_8"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

</robot>